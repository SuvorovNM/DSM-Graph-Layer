                    <TextBlock Text="Модель" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="21,0,-21,0"/>
                </MenuItem.Header>
                <MenuItem Header="Открыть из файла..."></MenuItem>
                <MenuItem Header="Показать"></MenuItem>
                <MenuItem Header="Изменить название"></MenuItem>
                <MenuItem Header="Сохранить"></MenuItem>
